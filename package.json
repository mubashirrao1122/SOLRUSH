{
  "name": "solrush-dex",
  "version": "0.1.0",
  "description": "SolRush DEX on Solana",
  "main": "index.js",
  "scripts": {
    "test": "anchor test",
    "test:unit": "mocha -r ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "anchor test tests/integration/**/*.test.ts",
    "test:e2e": "anchor test tests/e2e/**/*.test.ts",
    "test:security": "anchor test tests/security/**/*.test.ts",
    "test:all": "anchor test tests/**/*.test.ts",
    "test:coverage": "nyc --reporter=text --reporter=html anchor test",
    "build": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "bash scripts/deploy.sh",
    "initialize": "bash scripts/initialize.sh",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "solana",
    "dex",
    "amm",
    "defi",
    "anchor"
  ],
  "author": "SolRush Team",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
